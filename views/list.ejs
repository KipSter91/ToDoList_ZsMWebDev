<%- include('header'); -%>

    <div class="box" id="heading">
        <h1>
            <%=title%>
        </h1>
    </div>

    <div class="box">
        <%newListItems.forEach((newListItem)=> { %>

            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=newListItem._id%>" onchange="this.form.submit()">
                    <p>
                        <%=newListItem.name%>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%=title%>"></input>
            </form>
            <%});%>


                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New item" autocomplete="off">
                    <button type="submit" name="list" value="<%=title%>">+</button>
                </form>
    </div>

    <%- include('footer'); -%>